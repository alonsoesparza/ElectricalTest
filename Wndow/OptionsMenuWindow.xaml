<Window x:Class="ElectricalTest.Wndow.OptionsMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ElectricalTest.Wndow"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="OptionsWindow" Height="350" Width="400" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" ResizeMode="NoResize">
    <Grid>
        <materialDesign:Card Margin="0" UniformCornerRadius="10">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                    <TextBlock Text="Opciones" FontSize="28" HorizontalAlignment="Center" Margin="0 10 0 20" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                    <!-- Contenido del popup -->
                    <StackPanel Margin="20">
                        <Button Content="Configurar" Height="60" FontSize="20" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,0,20"/>
                        <Button x:Name="BtnMainClose" Height="60" FontSize="20" Content="Cerrar Aplicacion" Background="#FF5722" BorderBrush="Red" Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnMainClose_Click" Margin="0,0,0,20" />
                        <Button x:Name="BtnCloseWindow" Height="60" FontSize="20" Content="Cerrar Menu" Style="{StaticResource MaterialDesignFlatButton}" Click="BtnCloseWindow_Click" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
